{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://systemfehler.github.io/schemas/extensions/organizations.schema.json",
  "title": "Systemfehler Organizations Extension Schema",
  "description": "Extension schema for organization attributes. Extends core schema.",
  "version": "0.1.0",
  "type": "object",
  "allOf": [
    { "$ref": "../core.schema.json" }
  ],
  "properties": {
    "organizationType": {
      "type": "string",
      "description": "Type of organization (government, NGO, charity, etc.)"
    },
    "region": {
      "type": "string",
      "description": "Geographic region or scope"
    },
    "services": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of services provided"
    },
    "contactDetails": {
      "type": "object",
      "properties": {
        "address": { "type": "string" },
        "phone": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "website": { "type": "string", "format": "uri" },
        "openingHours": { "type": "string" }
      }
    }
  },
  "_todo": [
    "TODO: Define organization type taxonomy per DATA-02 (Issue #8)",
    "TODO: Add region validation against geographic taxonomy"
  ]
}
