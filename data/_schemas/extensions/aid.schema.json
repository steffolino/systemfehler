{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://systemfehler.github.io/schemas/extensions/aid.schema.json",
  "title": "Systemfehler Aid Extension Schema",
  "description": "Extension schema for aid program attributes. Extends core schema.",
  "version": "0.1.0",
  "type": "object",
  "allOf": [
    { "$ref": "../core.schema.json" }
  ],
  "properties": {
    "aidType": {
      "type": "string",
      "description": "Type of aid (financial, material, advisory, etc.)"
    },
    "modality": {
      "type": "string",
      "description": "How the aid is delivered"
    },
    "eligibilityCriteria": {
      "$ref": "#/definitions/multilingualText",
      "description": "Eligibility requirements"
    },
    "providingOrganization": {
      "type": "string",
      "description": "Reference to organization providing the aid"
    }
  },
  "definitions": {
    "multilingualText": {
      "type": "object",
      "properties": {
        "de": { "type": "string" },
        "en": { "type": "string" },
        "easy_de": { "type": "string" }
      },
      "additionalProperties": { "type": "string" }
    }
  },
  "_todo": [
    "TODO: Define aid-specific fields per DATA-02 (Issue #8)",
    "TODO: Add aid modality taxonomy validation"
  ]
}
